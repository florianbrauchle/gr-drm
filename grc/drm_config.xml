<?xml version="1.0"?>
<block>
  <name>DRM Configuration</name>
  <key>variable_drm_config</key>
  <category>DRM</category>
  <import>import drm</import>
  <var_make>self.$(id) = $(id) = drm.transm_params($RM, $SO, False, 0, $msc_mapping, 0, $msc_prot_level_2_16 if $msc_mapping()==1 else $msc_prot_level_2_64, $sdc_mapping, 0, $long_interl, $audio_sample_rate, $station_label, $text_message)</var_make>
  <var_value>drm.transm_params($RM, $SO, False, 0, $msc_mapping, 0, $msc_prot_level_2_16 if $msc_mapping()==1 else $msc_prot_level_2_64, $sdc_mapping, 0, $long_interl, $audio_sample_rate, $station_label, $text_message)</var_value>
  <make></make>
  
  <param>
    <name>Robustness mode</name>
    <key>RM</key>
    <value>2</value>
    <type>enum</type>
		<option>
			<name>A</name>
			<key>0</key>
		</option>
		<option>
			<name>B</name>
			<key>1</key>
		</option>
		<option>
			<name>C</name>
			<key>2</key>
		</option>
		<option>
			<name>D</name>
			<key>3</key>
		</option>
  </param>
  
  <param>
    <name>Spectrum Occupancy</name>
    <key>SO</key>
    <value>3</value>
    <type>enum</type>
		<option>
			<name>4.5 kHz</name>
			<key>0</key>
		</option>
		<option>
			<name>5 kHz</name>
			<key>1</key>
		</option>
		<option>
			<name>9 kHz</name>
			<key>2</key>
		</option>
		<option>
			<name>10 kHz</name>
			<key>3</key>
		</option>
		<option>
			<name>18 kHz</name>
			<key>4</key>
		</option>
		<option>
			<name>20 kHz</name>
			<key>5</key>
		</option>
  </param>

  <param>
    <name>Audio Sample Rate</name>
    <key>audio_sample_rate</key>
    <value>24000</value>
    <type>enum</type>
		<option>
			<name>24 kHz</name>
			<key>24000</key>
		</option>
		<option>
			<name>12 kHz</name>
			<key>12000</key>
		</option>
  </param>
  
  <param>
    <name>MSC Mapping</name>
    <key>msc_mapping</key>
    <value>1</value>
    <type>enum</type>
		<option>
			<name>16-QAM</name>
			<key>1</key>
		</option>
		<option>
			<name>64-QAM SM</name>
			<key>2</key>
		</option>
  </param>  
  
  <param>
    <name>SDC Mapping</name>
    <key>sdc_mapping</key>
    <value>0</value>
    <type>enum</type>
		<option>
			<name>4-QAM</name>
			<key>1</key>
		</option>
		<option>
			<name>16-QAM</name>
			<key>0</key>
		</option>
  </param>  
  
  <param>
		<name>MSC Protection Level</name>
		<key>msc_prot_level_2_16</key>
		<value>0</value>
		<type>enum</type>
		<hide>#if $msc_mapping()=='1' then 'none' else 'all'#</hide>
	  <option>
			<name>0 (R=0.5)</name>
			<key>0</key>
		</option>
		<option>
			<name>1 (R=0.62)</name>
			<key>1</key>
		</option>
	</param>
  
  <param>
    <name>MSC Protection Level</name>
    <key>msc_prot_level_2_64</key>
    <value>0</value>
    <type>enum</type>
    <hide>#if $msc_mapping()=='2' then 'none' else 'all'#</hide>
		<option>
			<name>0 (R=0.5)</name>
			<key>0</key>
		</option>
		<option>
			<name>1 (R=0.6)</name>
			<key>1</key>
		</option>
		<option>
			<name>2 (R=0.71)</name>
			<key>2</key>
		</option>
		<option>
			<name>3 (R=0.78)</name>
			<key>3</key>
		</option>
  </param>
  
  <param>
    <name>Interleaving</name>
    <key>long_interl</key>
    <value>True</value>
    <type>enum</type>
		<option>
			<name>Long</name>
			<key>True</key>
		</option>
		<option>
			<name>Short</name>
			<key>False</key>
		</option>
  </param>
  
  <param>
    <name>Station Label</name>
    <key>station_label</key>
    <value>"GNU Radio on DRM"</value>
    <type>string</type>
  </param>
  
  <param>
    <name>Text Message</name>
    <key>text_message</key>
    <value>"This is GNU Radio on DRM!"</value>
    <type>string</type>
  </param>
  
</block>
